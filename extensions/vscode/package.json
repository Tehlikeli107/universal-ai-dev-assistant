{
  "name": "uaida-vscode",
  "displayName": "Universal AI Development Assistant",
  "description": "AI-powered development assistant with autonomous PRs",
  "version": "1.0.0",
  "publisher": "uaida",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Programming Languages"
  ],
  "keywords": [
    "ai",
    "assistant",
    "code-generation",
    "testing",
    "automation"
  ],
  "activationEvents": [
    "onCommand:uaida.plan",
    "onCommand:uaida.patch",
    "onCommand:uaida.test",
    "onCommand:uaida.review",
    "onCommand:uaida.rollback"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "uaida.plan",
        "title": "UAIDA: Create Plan",
        "icon": "$(lightbulb)"
      },
      {
        "command": "uaida.patch",
        "title": "UAIDA: Apply Patch",
        "icon": "$(git-commit)"
      },
      {
        "command": "uaida.test",
        "title": "UAIDA: Run Tests",
        "icon": "$(beaker)"
      },
      {
        "command": "uaida.review",
        "title": "UAIDA: Code Review",
        "icon": "$(checklist)"
      },
      {
        "command": "uaida.rollback",
        "title": "UAIDA: Rollback",
        "icon": "$(discard)"
      }
    ],
    "configuration": {
      "title": "UAIDA Configuration",
      "properties": {
        "uaida.serverUrl": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "UAIDA backend server URL"
        },
        "uaida.autoApplyPatches": {
          "type": "boolean",
          "default": false,
          "description": "Automatically apply patches without confirmation"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "echo 'No tests configured'",
    "package": "echo 'Package command placeholder'"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {}
}