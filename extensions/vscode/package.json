{
  "name": "universal-ai-dev-assistant",
  "displayName": "Universal AI Development Assistant",
  "description": "AI-powered coding assistant with 8 providers - OpenRouter, OpenAI, Anthropic, Google, Groq, Together, Cohere, Ollama",
  "version": "1.0.0",
  "publisher": "universal-ai-dev",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Machine Learning",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "ai",
    "artificial intelligence",
    "code completion",
    "copilot",
    "assistant",
    "openai",
    "anthropic",
    "google"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "uaida.complete",
        "title": "AI Complete Code",
        "category": "UAIDA"
      },
      {
        "command": "uaida.analyze",
        "title": "Analyze Code",
        "category": "UAIDA"
      },
      {
        "command": "uaida.chat",
        "title": "Open AI Chat",
        "category": "UAIDA"
      },
      {
        "command": "uaida.explain",
        "title": "Explain Code",
        "category": "UAIDA"
      },
      {
        "command": "uaida.refactor",
        "title": "Refactor Code",
        "category": "UAIDA"
      },
      {
        "command": "uaida.generateTests",
        "title": "Generate Tests",
        "category": "UAIDA"
      }
    ],
    "keybindings": [
      {
        "command": "uaida.complete",
        "key": "ctrl+shift+space",
        "when": "editorTextFocus"
      },
      {
        "command": "uaida.chat",
        "key": "ctrl+shift+c",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "uaida.complete",
          "group": "uaida"
        },
        {
          "command": "uaida.analyze",
          "group": "uaida"
        },
        {
          "command": "uaida.explain",
          "group": "uaida"
        }
      ]
    },
    "configuration": {
      "title": "Universal AI Dev Assistant",
      "properties": {
        "uaida.apiUrl": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "UAIDA API server URL"
        },
        "uaida.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your UAIDA API key"
        },
        "uaida.defaultProvider": {
          "type": "string",
          "default": "openai",
          "enum": [
            "openrouter",
            "openai",
            "anthropic",
            "google",
            "groq",
            "together",
            "cohere",
            "ollama"
          ],
          "description": "Default AI provider"
        },
        "uaida.maxTokens": {
          "type": "number",
          "default": 100,
          "description": "Maximum tokens for completion"
        },
        "uaida.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "Temperature for AI responses"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.103.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "axios": "^1.11.0"
  },
  "author": "",
  "license": "ISC"
}
