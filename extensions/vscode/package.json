{
  "name": "uaida-vscode",
  "displayName": "Universal AI Development Assistant",
  "description": "Next-generation AI-powered development assistant with multi-provider support",
  "version": "6.2.0",
  "publisher": "universal-ai-team",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Programming Languages",
    "Snippets",
    "Formatters"
  ],
  "keywords": [
    "ai",
    "assistant",
    "code-generation",
    "completion",
    "analysis",
    "documentation",
    "testing",
    "refactoring",
    "openai",
    "anthropic",
    "openrouter"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "uaida.complete",
        "title": "Complete Code",
        "category": "UAIDA"
      },
      {
        "command": "uaida.analyze",
        "title": "Analyze Code",
        "category": "UAIDA"
      },
      {
        "command": "uaida.explain",
        "title": "Explain Code",
        "category": "UAIDA"
      },
      {
        "command": "uaida.document",
        "title": "Generate Documentation",
        "category": "UAIDA"
      },
      {
        "command": "uaida.test",
        "title": "Generate Tests",
        "category": "UAIDA"
      },
      {
        "command": "uaida.refactor",
        "title": "Refactor Code",
        "category": "UAIDA"
      },
      {
        "command": "uaida.translate",
        "title": "Translate Code",
        "category": "UAIDA"
      },
      {
        "command": "uaida.chat",
        "title": "Open AI Chat",
        "category": "UAIDA"
      },
      {
        "command": "uaida.status",
        "title": "Show Status",
        "category": "UAIDA"
      },
      {
        "command": "uaida.configure",
        "title": "Configure Providers",
        "category": "UAIDA"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "uaida.submenu",
          "group": "1_modification@1"
        }
      ],
      "uaida.submenu": [
        {
          "command": "uaida.complete",
          "when": "editorHasSelection || editorTextFocus",
          "group": "1_generate@1"
        },
        {
          "command": "uaida.explain",
          "when": "editorHasSelection",
          "group": "1_generate@2"
        },
        {
          "command": "uaida.document",
          "when": "editorHasSelection",
          "group": "1_generate@3"
        },
        {
          "command": "uaida.test",
          "when": "editorHasSelection",
          "group": "1_generate@4"
        },
        {
          "command": "uaida.refactor",
          "when": "editorHasSelection",
          "group": "2_modify@1"
        },
        {
          "command": "uaida.translate",
          "when": "editorHasSelection",
          "group": "2_modify@2"
        },
        {
          "command": "uaida.analyze",
          "when": "editorHasSelection || editorTextFocus",
          "group": "3_analyze@1"
        }
      ],
      "commandPalette": [
        {
          "command": "uaida.complete",
          "when": "editorIsOpen"
        },
        {
          "command": "uaida.analyze",
          "when": "editorIsOpen"
        },
        {
          "command": "uaida.explain",
          "when": "editorIsOpen"
        },
        {
          "command": "uaida.document",
          "when": "editorIsOpen"
        },
        {
          "command": "uaida.test",
          "when": "editorIsOpen"
        },
        {
          "command": "uaida.refactor",
          "when": "editorIsOpen"
        },
        {
          "command": "uaida.translate",
          "when": "editorIsOpen"
        }
      ]
    },
    "submenus": [
      {
        "id": "uaida.submenu",
        "label": "UAIDA AI Assistant"
      }
    ],
    "configuration": {
      "title": "UAIDA Configuration",
      "properties": {
        "uaida.serverUrl": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "UAIDA backend server URL"
        },
        "uaida.enableAutoCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic code completion suggestions"
        },
        "uaida.defaultProvider": {
          "type": "string",
          "enum": ["auto", "openrouter", "openai", "anthropic", "google", "groq", "ollama"],
          "default": "auto",
          "description": "Default AI provider to use"
        },
        "uaida.defaultModel": {
          "type": "string",
          "default": "",
          "description": "Default AI model to use (leave empty for provider default)"
        },
        "uaida.maxTokens": {
          "type": "number",
          "default": 1000,
          "minimum": 1,
          "maximum": 4000,
          "description": "Maximum tokens for AI responses"
        },
        "uaida.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "AI response creativity (0.0 = deterministic, 1.0 = creative)"
        },
        "uaida.showProgress": {
          "type": "boolean",
          "default": true,
          "description": "Show progress indicators for AI requests"
        },
        "uaida.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time code analysis and diagnostics"
        },
        "uaida.autoSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically save generated code"
        },
        "uaida.createBackups": {
          "type": "boolean",
          "default": true,
          "description": "Create backups before modifying files"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "uaidaExplorer",
          "name": "UAIDA Assistant",
          "when": "workspaceHasFolder"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "uaida",
          "title": "UAIDA",
          "icon": "$(robot)"
        }
      ]
    },
    "keybindings": [
      {
        "command": "uaida.complete",
        "key": "ctrl+shift+space",
        "when": "editorTextFocus"
      },
      {
        "command": "uaida.explain",
        "key": "ctrl+shift+e",
        "when": "editorHasSelection"
      },
      {
        "command": "uaida.chat",
        "key": "ctrl+shift+c",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "echo 'Tests not configured yet'",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}