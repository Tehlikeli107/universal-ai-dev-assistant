{
  "name": "universal-ai-dev-assistant",
  "displayName": "Universal AI Development Assistant",
  "description": "Privacy-focused, local AI-powered development assistant",
  "version": "0.1.0",
  "publisher": "uaida",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "ai",
    "assistant",
    "code completion",
    "development",
    "productivity"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "uaida.complete",
        "title": "AI Complete",
        "category": "UAIDA"
      },
      {
        "command": "uaida.analyze",
        "title": "Analyze Code",
        "category": "UAIDA"
      },
      {
        "command": "uaida.refactor",
        "title": "Suggest Refactoring",
        "category": "UAIDA"
      },
      {
        "command": "uaida.generateDocs",
        "title": "Generate Documentation",
        "category": "UAIDA"
      },
      {
        "command": "uaida.generateTests",
        "title": "Generate Tests",
        "category": "UAIDA"
      }
    ],
    "keybindings": [
      {
        "command": "uaida.complete",
        "key": "ctrl+space",
        "when": "editorTextFocus"
      },
      {
        "command": "uaida.analyze",
        "key": "ctrl+shift+a",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Universal AI Dev Assistant",
      "properties": {
        "uaida.serverUrl": {
          "type": "string",
          "default": "http://127.0.0.1:8080",
          "description": "UAIDA server URL"
        },
        "uaida.enableAutoComplete": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic code completion"
        },
        "uaida.enableCodeAnalysis": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time code analysis"
        },
        "uaida.maxSuggestions": {
          "type": "number",
          "default": 5,
          "description": "Maximum number of suggestions to show"
        },
        "uaida.completionDelay": {
          "type": "number",
          "default": 300,
          "description": "Delay in milliseconds before triggering completion"
        }
      }
    },
    "languages": [
      {
        "id": "python",
        "extensions": [".py"],
        "aliases": ["Python"]
      },
      {
        "id": "javascript",
        "extensions": [".js", ".jsx"],
        "aliases": ["JavaScript"]
      },
      {
        "id": "typescript",
        "extensions": [".ts", ".tsx"],
        "aliases": ["TypeScript"]
      },
      {
        "id": "rust",
        "extensions": [".rs"],
        "aliases": ["Rust"]
      },
      {
        "id": "go",
        "extensions": [".go"],
        "aliases": ["Go"]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}